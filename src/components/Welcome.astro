<style>
    #background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        filter: blur(100px);
    }

    #container {
        font-family: "JetBrains Mono", monospace;
        min-height: calc(100vh - 200px);
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #hero {
        display: flex;
        align-items: flex-start;
        flex-direction: column;
        justify-content: center;
        padding: 2rem;
        max-width: 600px;
    }

    h1 {
        font-size: 3.5rem;
        margin: 0 0 0.5em 0;
        color: #fff;
        font-weight: bold;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .tagline {
        font-size: 1.25rem;
        color: #aaa;
        margin-bottom: 2em;
        line-height: 1.6;
    }

    #links {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    #links a {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.5rem;
        color: #e0e0e0;
        text-decoration: none;
        transition: all 0.3s;
        border-radius: 8px;
        font-weight: 600;
    }

    #links a:hover {
        color: #fff;
    }

    #links a svg {
        height: 1em;
        margin-left: 8px;
    }

    #links a.button {
        color: white;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        border: none;
    }

    #links a.button:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(50, 69, 255, 0.3);
    }

    #links a:not(.button) {
        border: 1px solid #444;
        color: #b0b0b0;
    }

    #links a:not(.button):hover {
        border-color: #3245ff;
        color: #3245ff;
        background: rgba(50, 69, 255, 0.05);
    }

    .box {
        padding: 1.5rem;
        background: rgba(26, 26, 26, 0.6);
        border: 1px solid #333;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        max-width: 320px;
        position: absolute;
        bottom: 2rem;
        right: 2rem;
    }

    .box:hover {
        background: rgba(50, 69, 255, 0.1);
        border-color: #3245ff;
        transform: translateY(-4px);
        box-shadow: 0 10px 30px rgba(50, 69, 255, 0.2);
    }

    .box svg {
        flex-shrink: 0;
        filter: brightness(0) saturate(100%) invert(31%) sepia(88%)
            saturate(2144%) hue-rotate(246deg) brightness(104%) contrast(95%);
    }

    .box > div {
        flex: 1;
    }

    #featured-post h2 {
        margin: 0 0 0.5em 0;
        font-weight: 600;
        color: #fff;
        font-size: 1.1rem;
    }

    #featured-post p {
        color: #888;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
    }

    @media screen and (max-height: 600px) {
        #featured-post {
            display: none;
        }
    }

    @media screen and (max-width: 768px) {
        #container {
            min-height: auto;
        }

        main {
            min-height: 70vh;
        }

        #hero {
            padding: 1rem;
        }

        h1 {
            font-size: 2.25rem;
            line-height: 1.2;
        }

        .tagline {
            font-size: 1rem;
        }

        #links {
            gap: 0.75rem;
        }

        #links a {
            padding: 0.6rem 1rem;
            font-size: 0.9rem;
        }

        #featured-post {
            right: 1rem;
            left: 1rem;
            max-width: 100%;
            bottom: 1rem;
        }
    }
</style>
