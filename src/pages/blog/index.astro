---
import Layout from '../../layouts/Layout.astro';

interface BlogPost {
    title: string;
    description: string;
    author: string;
    date: Date;
    category: string;
    readingTime: string;
    slug: string;
}

const posts: BlogPost[] = [
    {
        title: "Getting Started with Astro: A Modern Static Site Generator",
        description: "Discover why Astro is revolutionizing web development with its islands architecture and zero JavaScript approach by default.",
        author: "Alex Rivera",
        date: new Date("2024-01-15"),
        category: "Tutorial",
        readingTime: "8 min read",
        slug: "getting-started-with-astro"
    },
    {
        title: "The Future of Web Development: Trends to Watch in 2024",
        description: "Explore emerging technologies and practices that are shaping the future of web development.",
        author: "Jordan Smith",
        date: new Date("2024-01-10"),
        category: "Trends",
        readingTime: "6 min read",
        slug: "future-web-development-trends"
    },
    {
        title: "Optimizing Performance: Advanced CSS Techniques",
        description: "Learn how to leverage modern CSS features to create performant and maintainable stylesheets.",
        author: "Casey Chen",
        date: new Date("2024-01-05"),
        category: "Performance",
        readingTime: "10 min read",
        slug: "css-performance-techniques"
    },
    {
        title: "Building Scalable Applications with TypeScript",
        description: "A comprehensive guide to using TypeScript for large-scale application development.",
        author: "Morgan Lee",
        date: new Date("2023-12-28"),
        category: "Development",
        readingTime: "12 min read",
        slug: "typescript-scalable-apps"
    },
    {
        title: "Understanding Web Components and Custom Elements",
        description: "Deep dive into building reusable, encapsulated components using Web Components API.",
        author: "Alex Rivera",
        date: new Date("2023-12-20"),
        category: "Tutorial",
        readingTime: "9 min read",
        slug: "web-components-guide"
    },
    {
        title: "The Rise of Edge Computing in Modern Web Architecture",
        description: "Explore how edge computing is transforming where and how web applications are executed.",
        author: "Jordan Smith",
        date: new Date("2023-12-15"),
        category: "Architecture",
        readingTime: "7 min read",
        slug: "edge-computing-architecture"
    }
];

// Sort by date descending
const sortedPosts = posts.sort((a, b) => b.date.getTime() - a.date.getTime());
---

<Layout>
    <div class="blog-container">
        <header class="blog-header">
            <h1 class="blog-title">Blog</h1>
            <p class="blog-subtitle">Stories, insights, and perspectives on web development and technology</p>
        </header>

        <div class="blog-grid">
            {sortedPosts.map((post) => (
                <article class="blog-card">
                    <div class="card-header">
                        <span class="category-badge">{post.category}</span>
                        <span class="reading-time">{post.readingTime}</span>
                    </div>

                    <h2 class="card-title">
                        <a href={`/blog/${post.slug}`}>{post.title}</a>
                    </h2>

                    <p class="card-description">{post.description}</p>

                    <footer class="card-footer">
                        <div class="post-meta">
                            <span class="author">{post.author}</span>
                            <time datetime={post.date.toISOString()}>
                                {post.date.toLocaleDateString('en-US', {
                                    year: 'numeric',
                                    month: 'short',
                                    day: 'numeric'
                                })}
                            </time>
                        </div>
                        <a href={`/blog/${post.slug}`} class="read-more">Read More â†’</a>
                    </footer>
                </article>
            ))}
        </div>

        <section class="newsletter-section">
            <h2>Stay Updated</h2>
            <p>Subscribe to get the latest articles delivered to your inbox</p>
            <form class="newsletter-form">
                <input
                    type="email"
                    placeholder="your@email.com"
                    required
                    aria-label="Email address"
                />
                <button type="submit" class="subscribe-btn">Subscribe</button>
            </form>
        </section>
    </div>
</Layout>

<style>
    .blog-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .blog-header {
        text-align: center;
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #333;
    }

    .blog-title {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        color: #fff;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .blog-subtitle {
        font-size: 1.1rem;
        color: #888;
        margin: 0;
    }

    .blog-grid {
        display: grid;
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .blog-card {
        background: linear-gradient(135deg, rgba(50, 69, 255, 0.05) 0%, rgba(188, 82, 238, 0.05) 100%);
        border: 1px solid #333;
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .blog-card:hover {
        border-color: #3245ff;
        box-shadow: 0 0 20px rgba(50, 69, 255, 0.1);
        transform: translateY(-2px);
    }

    .card-header {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .category-badge {
        display: inline-block;
        padding: 0.35rem 0.75rem;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        color: white;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .reading-time {
        font-size: 0.85rem;
        color: #666;
    }

    .card-title {
        font-size: 1.5rem;
        margin: 0.5rem 0 1rem 0;
        color: #fff;
    }

    .card-title a {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s;
    }

    .card-title a:hover {
        color: #3245ff;
    }

    .card-description {
        color: #b0b0b0;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid #444;
    }

    .post-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.9rem;
        color: #888;
    }

    .author {
        font-weight: 600;
        color: #aaa;
    }

    .read-more {
        color: #3245ff;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

    .read-more:hover {
        color: #bc52ee;
    }

    .newsletter-section {
        background: linear-gradient(135deg, rgba(50, 69, 255, 0.1) 0%, rgba(188, 82, 238, 0.1) 100%);
        border: 1px solid #333;
        border-radius: 12px;
        padding: 3rem 2rem;
        text-align: center;
        margin-top: 4rem;
    }

    .newsletter-section h2 {
        font-size: 2rem;
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .newsletter-section p {
        color: #888;
        margin-bottom: 2rem;
    }

    .newsletter-form {
        display: flex;
        gap: 1rem;
        max-width: 500px;
        margin: 0 auto;
    }

    .newsletter-form input {
        flex: 1;
        padding: 0.75rem 1rem;
        background-color: #1a1a1a;
        border: 1px solid #333;
        border-radius: 8px;
        color: #e0e0e0;
        font-size: 1rem;
        font-family: "JetBrains Mono", monospace;
        transition: border-color 0.3s;
    }

    .newsletter-form input:focus {
        outline: none;
        border-color: #3245ff;
        box-shadow: 0 0 10px rgba(50, 69, 255, 0.2);
    }

    .newsletter-form input::placeholder {
        color: #666;
    }

    .subscribe-btn {
        padding: 0.75rem 2rem;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        font-family: "JetBrains Mono", monospace;
        transition: all 0.3s;
    }

    .subscribe-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(50, 69, 255, 0.3);
    }

    .subscribe-btn:active {
        transform: translateY(0);
    }

    @media (max-width: 768px) {
        .blog-title {
            font-size: 2rem;
        }

        .blog-subtitle {
            font-size: 1rem;
        }

        .card-title {
            font-size: 1.25rem;
        }

        .newsletter-form {
            flex-direction: column;
        }

        .card-footer {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .newsletter-section {
            padding: 2rem 1rem;
        }

        .newsletter-section h2 {
            font-size: 1.5rem;
        }
    }
</style>
