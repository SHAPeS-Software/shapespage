---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const base = import.meta.env.BASE_URL || "/";

type BlogEntry = CollectionEntry<"blog">;

const posts = await getCollection("blog");
const sortedPosts: BlogEntry[] = posts.sort(
    (a: BlogEntry, b: BlogEntry) =>
        b.data.date.getTime() - a.data.date.getTime(),
);
---

<Layout>
    <div class="blog-container">
        <header class="blog-header">
            <h1 class="blog-title">Blog</h1>
            <p class="blog-subtitle">
                My thoughts, opinions or anything else in Markdown format
            </p>
        </header>

        <div class="blog-grid">
            {
                sortedPosts.map((post) => (
                    <article class="blog-card">
                        <div class="card-header">
                            <span class="category-badge">
                                {post.data.category || "Article"}
                            </span>
                            <span class="reading-time">
                                {Math.ceil(post.body.split(/\s+/).length / 200)}{" "}
                                min read
                            </span>
                        </div>

                        <h2 class="card-title">
                            <a href={`${base}blog/${post.slug}`}>
                                {post.data.title}
                            </a>
                            <br />
                            {post.data.image && (
                                <img
                                    src={post.data.image}
                                    alt={post.data.title || "Post thumbnail"}
                                    width="1000"
                                    height="450"
                                    loading="eager"
                                    decoding="async"
                                    class="post-thumbnail"
                                />
                            )}
                        </h2>

                        <p class="card-description">{post.data.description}</p>

                        <footer class="card-footer">
                            <div class="post-meta">
                                <span class="author">{post.data.author}</span>
                                <time datetime={post.data.date.toISOString()}>
                                    {post.data.date.toLocaleDateString(
                                        "en-US",
                                        {
                                            year: "numeric",
                                            month: "short",
                                            day: "numeric",
                                        },
                                    )}
                                </time>
                            </div>
                            <a
                                href={`${base}blog/${post.slug}`}
                                class="read-more"
                            >
                                Read More â†’
                            </a>
                        </footer>
                    </article>
                ))
            }
        </div>
    </div>
</Layout>

<style>
    .blog-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .blog-header {
        text-align: center;
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #333;
    }

    .blog-title {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        color: #fff;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .blog-subtitle {
        font-size: 1.1rem;
        color: #888;
        margin: 0;
    }

    .blog-grid {
        display: grid;
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .blog-card {
        background: linear-gradient(
            135deg,
            rgba(50, 69, 255, 0.05) 0%,
            rgba(188, 82, 238, 0.05) 100%
        );
        border: 1px solid #333;
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .blog-card:hover {
        border-color: #3245ff;
        box-shadow: 0 0 20px rgba(50, 69, 255, 0.1);
        transform: translateY(-2px);
    }

    .card-header {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .category-badge {
        display: inline-block;
        padding: 0.35rem 0.75rem;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        color: white;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .post-thumbnail {
        width: 100%;
        height: 450px; /* or whatever height you prefer */
        object-fit: cover; /* crops to fill the space without distortion */
        object-position: center; /* centers the crop */
        border-radius: 12px;
        margin-bottom: 1.5rem;
        display: block;
    }

    .reading-time {
        font-size: 0.85rem;
        color: #666;
    }

    .card-title {
        font-size: 1.5rem;
        margin: 0.5rem 0 1rem 0;
        color: #fff;
    }

    .card-title a {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s;
    }

    .card-title a:hover {
        color: #3245ff;
    }

    .card-description {
        color: #b0b0b0;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid #444;
    }

    .post-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.9rem;
        color: #888;
    }

    .author {
        font-weight: 600;
        color: #aaa;
    }

    .read-more {
        color: #3245ff;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

    .read-more:hover {
        color: #bc52ee;
    }

    @media (max-width: 768px) {
        .blog-title {
            font-size: 2rem;
        }

        .blog-subtitle {
            font-size: 1rem;
        }

        .card-title {
            font-size: 1.25rem;
        }
    }
</style>
