---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const posts = await getCollection("blog");
const sortedPosts = posts.sort(
    (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
        b.data.date.getTime() - a.data.date.getTime(),
);
---

<Layout>
    <div class="blog-container">
        <header class="blog-header">
            <h1 class="blog-title">Blog</h1>
            <p class="blog-subtitle">My thoughts,</p>
        </header>

        <div class="blog-grid">
            {
                sortedPosts.map((post: CollectionEntry<"blog">) => (
                    <article class="blog-card">
                        <div class="card-header">
                            <span class="category-badge">
                                {post.data.category || "Article"}
                            </span>
                        </div>

                        <h2 class="card-title">
                            <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                        </h2>

                        <p class="card-description">{post.data.description}</p>

                        <footer class="card-footer">
                            <div class="post-meta">
                                <span class="author">{post.data.author}</span>
                                <time datetime={post.data.date.toISOString()}>
                                    {post.data.date.toLocaleDateString(
                                        "en-US",
                                        {
                                            year: "numeric",
                                            month: "short",
                                            day: "numeric",
                                        },
                                    )}
                                </time>
                            </div>
                            <a href={`/blog/${post.slug}`} class="read-more">
                                Read More â†’
                            </a>
                        </footer>
                    </article>
                ))
            }
        </div>

        <section class="newsletter-section">
            <h2>Stay Updated</h2>
            <p>Subscribe to get the latest articles delivered to your inbox</p>
            <form class="newsletter-form">
                <input
                    type="email"
                    placeholder="your@email.com"
                    required
                    aria-label="Email address"
                />
                <button type="submit" class="subscribe-btn">Subscribe</button>
            </form>
        </section>
    </div>
</Layout>

<style>
    .blog-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .blog-header {
        text-align: center;
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #333;
    }

    .blog-title {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        color: #fff;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .blog-subtitle {
        font-size: 1.1rem;
        color: #888;
        margin: 0;
    }

    .blog-grid {
        display: grid;
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .blog-card {
        background: linear-gradient(
            135deg,
            rgba(50, 69, 255, 0.05) 0%,
            rgba(188, 82, 238, 0.05) 100%
        );
        border: 1px solid #333;
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .blog-card:hover {
        border-color: #3245ff;
        box-shadow: 0 0 20px rgba(50, 69, 255, 0.1);
        transform: translateY(-2px);
    }

    .card-header {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .category-badge {
        display: inline-block;
        padding: 0.35rem 0.75rem;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        color: white;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .card-title {
        font-size: 1.5rem;
        margin: 0.5rem 0 1rem 0;
        color: #fff;
    }

    .card-title a {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s;
    }

    .card-title a:hover {
        color: #3245ff;
    }

    .card-description {
        color: #b0b0b0;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid #444;
    }

    .post-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.9rem;
        color: #888;
    }

    .author {
        font-weight: 600;
        color: #aaa;
    }

    .read-more {
        color: #3245ff;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

    .read-more:hover {
        color: #bc52ee;
    }

    .newsletter-section {
        background: linear-gradient(
            135deg,
            rgba(50, 69, 255, 0.1) 0%,
            rgba(188, 82, 238, 0.1) 100%
        );
        border: 1px solid #333;
        border-radius: 12px;
        padding: 3rem 2rem;
        text-align: center;
        margin-top: 4rem;
    }

    .newsletter-section h2 {
        font-size: 2rem;
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .newsletter-section p {
        color: #888;
        margin-bottom: 2rem;
    }

    .newsletter-form {
        display: flex;
        gap: 1rem;
        max-width: 500px;
        margin: 0 auto;
    }

    .newsletter-form input {
        flex: 1;
        padding: 0.75rem 1rem;
        background-color: #1a1a1a;
        border: 1px solid #333;
        border-radius: 8px;
        color: #e0e0e0;
        font-size: 1rem;
        font-family: "JetBrains Mono", monospace;
        transition: border-color 0.3s;
    }

    .newsletter-form input:focus {
        outline: none;
        border-color: #3245ff;
        box-shadow: 0 0 10px rgba(50, 69, 255, 0.2);
    }

    .newsletter-form input::placeholder {
        color: #666;
    }

    .subscribe-btn {
        padding: 0.75rem 2rem;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        font-family: "JetBrains Mono", monospace;
        transition: all 0.3s;
    }

    .subscribe-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(50, 69, 255, 0.3);
    }

    .subscribe-btn:active {
        transform: translateY(0);
    }

    @media (max-width: 768px) {
        .blog-title {
            font-size: 2rem;
        }

        .blog-subtitle {
            font-size: 1rem;
        }

        .card-title {
            font-size: 1.25rem;
        }

        .newsletter-form {
            flex-direction: column;
        }

        .card-footer {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .newsletter-section {
            padding: 2rem 1rem;
        }

        .newsletter-section h2 {
            font-size: 1.5rem;
        }
    }
</style>
